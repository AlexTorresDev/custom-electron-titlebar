{
  "compilerOptions": {
    "lib": [
      "ES2022",
      "DOM"
    ],
    "baseUrl": "./src",
    "paths": {
      "base/*": [
        "./base/*"
      ],
      "static/*": [
        "../static/*"
      ],
    },
    "module": "CommonJS",
    "target": "ES2021",
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}