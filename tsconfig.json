{
  "compilerOptions": {
    "lib": [
      "ES2021",
      "DOM"
    ],
    "target": "ES2021",
    "baseUrl": "./src",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "**/node_modules/*"
  ]
}